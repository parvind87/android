<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/fifty_six_dp</item>
        <item name="android:clickable">true</item>
        <item name="android:drawablePadding">32dp</item>
        <item name="android:drawableTint" tools:targetApi="m">@color/even_less_black</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:padding">@dimen/sixteen_dp</item>
        <item name="android:textSize">@dimen/sixteen_sp</item>
        <item name="android:textColor">@color/even_less_black</item>
    </style>

    <style name="titleTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/eight_dp</item>
        <item name="android:layout_marginLeft">@dimen/eight_dp</item>
        <item name="android:layout_marginEnd">@dimen/eight_dp</item>
        <item name="android:layout_marginRight">@dimen/eight_dp</item>
        <item name="android:layout_marginTop">@dimen/four_dp</item>
        <item name="android:layout_marginBottom">@dimen/four_dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">4</item>
        <item name="android:textSize">@dimen/eighteen_sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="authorTextViewStyle" parent="titleTextViewStyle">
        <item name="android:textSize">@dimen/fourteen_sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="dateTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/twelve_sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="moreImageButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:tint">@color/gray</item>
    </style>

</resources>
