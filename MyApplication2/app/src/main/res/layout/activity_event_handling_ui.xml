<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/skyyblue"
    tools:context=".activities.EventHandlingActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="383dp"
        android:layout_height="107dp"
        android:text="@string/app_slogan"
        android:textColor="@color/textcolor"
        android:textSize="44sp"
        tools:layout_editor_absoluteY="300dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal|fill_horizontal"
        android:text="Screen 2"
        tools:layout_editor_absoluteY="487dp"
        app:layout_constraintBottom_toBottomOf="@id/imageView"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="417dp"
        android:layout_height="402dp"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        app:srcCompat="@drawable/krishna" />

    <Button
        android:id="@+id/btncal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="gotoCal"
        android:text="Calculator"
        app:layout_constraintTop_toBottomOf="@id/button"
        tools:layout_editor_absoluteX="6dp" />

    <Button
        android:id="@+id/button19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:onClick="play"
        android:text="Play"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.154"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btncal"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/clickCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="121dp"
        android:onClick="countClick"
        android:text="Click"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:layout_editor_absoluteX="247dp" />

</androidx.constraintlayout.widget.ConstraintLayout>